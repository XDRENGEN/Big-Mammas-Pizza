@page
@using Big_Mammas_Pizza.model;
@model Big_Mammas_Pizza.Pages.PagesSandwich.IndexModel
@{
    ViewData["Title"] = "Sandwich";
}

<h1 class="jumbotron">SANDWICH</h1>

<form method="post">
    <input type="submit" value="ADD NEW SANDWICH" class="btn btn-primary" />

</form>

<table class="table table-hover">
    <thead>
    <tr>
        <th>Sandwichnumber</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price in kr.</th>
    </tr>
    </thead>
    <tbody>

        
    @foreach (Sandwich s in Model.Sandwicher)
    {
        <tr>
            <td>@s.SandwichNumber</td>
            <td>@s.Name</td>
            <td>@s.Description</td>
            <td>@s.Price</td>
        </tr>
    }

    

    </tbody>
</table>
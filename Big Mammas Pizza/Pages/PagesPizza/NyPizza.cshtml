}
<h1>Create new pizza</h1>


<form method="post">
    <div class="form-group>">
        <label>Pizza navn</label><br />
        <input class="form-control" asp-for="@Model.NytPizzaNavn" /><br />
        <span asp-validation-for="@Model.NytPizzaNavn" class="text-danger"></span><br />

        <label>Pizza price</label><br />
        <input class="form-control" asp-for="@Model.NytPizzaPrice" /><br />


        <label>Pizza description</label><br />
        <input class="form-control" asp-for="@Model.NytPizzaDescription" /><br />


        <label>Pizza nummer</label><br />
        <input class="form-control" asp-for="@Model.NytPizzaNummer" /><br />


        <input type="submit" value="Add new pizza" class="btn btn-success" />
        <input type="submit" value="Regret" class="btn btn-danger" asp-page-handler="Cancel" />
